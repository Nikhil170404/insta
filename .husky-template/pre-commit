#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# ReplyKaro Pre-Commit Hook
# Enforces code quality before commits

echo "ğŸ” Running pre-commit checks..."

# 1. Lint check
echo "ğŸ“ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix errors before committing."
  exit 1
fi

# 2. Type check
echo "ğŸ”§ Running TypeScript check..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Please fix before committing."
  exit 1
fi

# 3. Run tests
echo "ğŸ§ª Running tests..."
npm run test:run
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
